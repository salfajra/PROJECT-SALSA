<div class="container">
    <br>
    <h3 class="text-telur" style="color: #DC5F00;">Data Telur</h3>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(telur=> { %> <!--for each : perulangan/looping-->
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-telur" style="color: #DC5F00;">Jenis Telur</small> <br />
                        <%= telur.jenis_telur %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-telur" style="color: #DC5F00;">Stok</small> <br />
                        <%= telur.stok %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-telur" style="color: #DC5F00;">Harga</small> <br />
                        Rp <%= telur.harga %>

                    </div>

                    <div class="col-lg-3">
                        <small class="text-telur" style="color: #DC5F00;">Action</small> <br />

                        <!-- button edit -->
                        <a href="/telur/edit/<%= telur.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/telur/delete/<%= telur.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/telur/add">
        <button class="btn btn-md text-white" style="background-color: #ff9c4a;">
            Tambah Data
        </button>
    </a>

</div>
