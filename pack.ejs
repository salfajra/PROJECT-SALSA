<div class="container">
    <br>
    <h3 class="text-pack" style="color: #DC5F00;" >Data Pack</h3>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(pack=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-4">
                        <small class="text-pack" style="color: #DC5F00;">Nama Pack</small> <br />
                        <%= pack.nama_pack %>
                    </div>
                    <div class="col-lg-4">
                        <small class="text-pack" style="color: #DC5F00;">Harga</small> <br />
                        Rp <%= pack.harga %>

                    </div>

                    <div class="col-lg-4">
                        <small class="text-pack" style="color: #DC5F00;" >Action</small> <br />

                        <!-- button edit -->
                        <a href="/pack/edit/<%= pack.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/pack/delete/<%= pack.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/pack/add">
        <button class="btn btn-md text-white" style="background-color: #ff9c4a;">
            Tambah Data
        </button>
    </a>

</div>
