<div class="container">
    <h4 class="text" style="color: #DC5F00;">Data Admin</h4>
    <hr>
    <ul class="list-group my-2">
        <% data.forEach(admin=> { %>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-3">
                        <small class="text-admin" style="color: #DC5F00;">Nama Admin</small> <br />
                        <%= admin.nama_admin %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-admin" style="color: #DC5F00;">Username</small> <br />
                        <%= admin.username %>
                    </div>
                    <div class="col-lg-3">
                        <small class="text-admin" style="color: #DC5F00;">Password</small> <br />
                        <%= admin.password %>
                    </div>

                    <div class="col-lg-3">
                        <small class="text-admin" style="color: #DC5F00;">Action</small> <br />

                        <!-- button edit -->
                        <a href="/admin/edit/<%= admin.id %>">
                            <button class="btn btn-sm btn-primary">
                                Edit
                            </button>
                        </a>

                        <!-- button delete -->
                        <a href="/admin/delete/<%= admin.id %>"
                            onclick="return confirm(`Apakah Anda yakin ingin menghapus data ini?`)">
                            <button class="btn btn-sm btn-danger">
                                Hapus
                            </button>
                        </a>

                    </div>
                </div>
            </li>
            <% }) %>
    </ul>

    <!-- button add new data -->
    <a href="/admin/add">
        <button class="btn btn-md text-white" style="background-color: #ff9c4a;">
            Tambah Data
        </button>
    </a>

</div>
